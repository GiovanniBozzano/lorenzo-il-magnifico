<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="184.0"
			prefWidth="200.0"
			xmlns="http://javafx.com/javafx/8.0.111"
			xmlns:fx="http://javafx.com/fxml/1"
			fx:controller="it.polimi.ingsw.lim.client.gui.ControllerConnection">
	<children>
		<VBox layoutX="32.0"
			  layoutY="-6.0"
			  prefHeight="210.0"
			  prefWidth="200.0"
			  spacing="5.0"
			  AnchorPane.bottomAnchor="15.0"
			  AnchorPane.leftAnchor="15.0"
			  AnchorPane.rightAnchor="15.0"
			  AnchorPane.topAnchor="15.0">
			<children>
				<GridPane>
					<columnConstraints>
						<ColumnConstraints hgrow="SOMETIMES"
										   percentWidth="25.0"/>
						<ColumnConstraints hgrow="SOMETIMES"
										   percentWidth="75.0"/>
					</columnConstraints>
					<rowConstraints>
						<RowConstraints minHeight="10.0"
										prefHeight="30.0"
										vgrow="SOMETIMES"/>
						<RowConstraints minHeight="10.0"
										prefHeight="30.0"
										vgrow="SOMETIMES"/>
						<RowConstraints minHeight="10.0"
										prefHeight="30.0"
										vgrow="SOMETIMES"/>
					</rowConstraints>
					<VBox.margin>
						<Insets/>
					</VBox.margin>
					<children>
						<TextField fx:id="ipTextField"
								   text="localhost"
								   GridPane.columnIndex="1"/>
						<TextField fx:id="portTextField"
								   GridPane.columnIndex="1"
								   GridPane.rowIndex="1"/>
						<TextField fx:id="nameTextField"
								   GridPane.columnIndex="1"
								   GridPane.rowIndex="2"/>
						<Label text="IP:"/>
						<Label text="Port:"
							   GridPane.rowIndex="1"/>
						<Label text="Name:"
							   GridPane.rowIndex="2"/>
					</children>
				</GridPane>
				<GridPane>
					<columnConstraints>
						<ColumnConstraints hgrow="SOMETIMES"
										   minWidth="10.0"
										   prefWidth="100.0"/>
						<ColumnConstraints hgrow="SOMETIMES"
										   minWidth="10.0"
										   prefWidth="100.0"/>
					</columnConstraints>
					<rowConstraints>
						<RowConstraints minHeight="10.0"
										prefHeight="30.0"
										vgrow="SOMETIMES"/>
					</rowConstraints>
					<children>
						<RadioButton fx:id="rmiRadioButton"
									 mnemonicParsing="false"
									 onAction="#handleRmiRadioButtonAction"
									 text="RMI">
							<GridPane.margin>
								<Insets/>
							</GridPane.margin>
							<toggleGroup>
								<ToggleGroup fx:id="connectionType"/>
							</toggleGroup>
						</RadioButton>
						<RadioButton fx:id="socketRadioButton"
									 mnemonicParsing="false"
									 onAction="#handleSocketRadioButtonAction"
									 text="Socket"
									 toggleGroup="$connectionType"
									 GridPane.columnIndex="1"
									 GridPane.halignment="RIGHT"/>
					</children>
					<VBox.margin>
						<Insets/>
					</VBox.margin>
				</GridPane>
				<Button fx:id="connectionButton"
						disable="true"
						mnemonicParsing="false"
						onAction="#handleConnectionButtonAction"
						prefWidth="170.0"
						text="Connect">
					<VBox.margin>
						<Insets/>
					</VBox.margin>
				</Button>
			</children>
		</VBox>
	</children>
</AnchorPane>
