<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.lim.client.gui.ControllerConnection">
	<children>
		<VBox layoutX="32.0" layoutY="-6.0" spacing="10.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
			<children>
				<GridPane hgap="5.0" vgap="5.0">
					<columnConstraints>
						<ColumnConstraints hgrow="SOMETIMES" percentWidth="25.0" />
						<ColumnConstraints hgrow="SOMETIMES" percentWidth="75.0" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints vgrow="SOMETIMES" />
						<RowConstraints vgrow="SOMETIMES" />
						<RowConstraints vgrow="SOMETIMES" />
					</rowConstraints>
					<VBox.margin>
						<Insets />
					</VBox.margin>
					<children>
						<TextField fx:id="ipTextField" prefWidth="120.0" text="localhost" GridPane.columnIndex="1" />
						<TextField fx:id="portTextField" prefWidth="120.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
						<TextField fx:id="nameTextField" prefWidth="120.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
						<Label minWidth="50.0" text="IP:" />
						<Label minWidth="50.0" text="Port:" GridPane.rowIndex="1" />
						<Label minWidth="50.0" text="Name:" GridPane.rowIndex="2" />
					</children>
				</GridPane>
				<GridPane>
					<columnConstraints>
						<ColumnConstraints hgrow="SOMETIMES" />
						<ColumnConstraints hgrow="SOMETIMES" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints vgrow="SOMETIMES" />
					</rowConstraints>
					<children>
						<RadioButton fx:id="rmiRadioButton" mnemonicParsing="false" onAction="#handleRmiRadioButtonAction" text="RMI">
							<GridPane.margin>
								<Insets />
							</GridPane.margin>
							<toggleGroup>
								<ToggleGroup fx:id="connectionType" />
							</toggleGroup>
						</RadioButton>
						<RadioButton fx:id="socketRadioButton" mnemonicParsing="false" onAction="#handleSocketRadioButtonAction" text="Socket" toggleGroup="$connectionType" GridPane.columnIndex="1" GridPane.halignment="RIGHT" />
					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</GridPane>
				<Button fx:id="connectionButton" disable="true" mnemonicParsing="false" onAction="#handleConnectionButtonAction" text="Connect">
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</Button>
			</children>
		</VBox>
	</children>
</AnchorPane>
